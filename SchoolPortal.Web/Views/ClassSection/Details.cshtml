@* SchoolPortal.Web/Views/ClassSection/Details.cshtml *@
@model ClassSectionDetailDto

@{
    ViewData["Title"] = "Class Section Details";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">@ViewData["Title"]</h4>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Class</dt>
            <dd class="col-sm-9">@Model.ClassName</dd>

            <dt class="col-sm-3">Section</dt>
            <dd class="col-sm-9">@Model.SectionName</dd>

            <dt class="col-sm-3">Class Teacher</dt>
            <dd class="col-sm-9">@(Model.ClassTeacherName ?? "N/A")</dd>

            <dt class="col-sm-3">Maximum Students</dt>
            <dd class="col-sm-9">@Model.MaxStudents</dd>

            <dt class="col-sm-3">Academic Year</dt>
            <dd class="col-sm-9">@Model.AcademicYear</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </dd>

            @if (!string.IsNullOrEmpty(Model.Remarks))
            {
                <dt class="col-sm-3">Remarks</dt>
                <dd class="col-sm-9">@Model.Remarks</dd>
            }

            <dt class="col-sm-3">Created Date</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToString("g")</dd>

            <dt class="col-sm-3">Created By</dt>
            <dd class="col-sm-9">@Model.CreatedBy</dd>

            @if (Model.ModifiedDate.HasValue)
            {
                <dt class="col-sm-3">Last Modified</dt>
                <dd class="col-sm-9">@Model.ModifiedDate.Value.ToString("g")</dd>

                <dt class="col-sm-3">Modified By</dt>
                <dd class="col-sm-9">@Model.ModifiedBy</dd>
            }
        </dl>
    </div>
</div>