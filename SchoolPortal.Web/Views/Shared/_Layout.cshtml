<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - SchoolPortal.Web</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/SchoolPortal.Web.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<style>
		body {
			margin: 0;
			padding: 0;
			overflow-x: hidden;
			background-color: #f8f9fa;
		}

		/* HEADER */
		header.navbar {
			width: 100%;
		}

		.navbar-dark .navbar-brand,
		.navbar-dark .nav-link {
			color: white !important;
		}

		/* MAIN CONTAINER */
		.main-container {
			/* display: flex; */
			min-height: calc(100vh - 56px); /* Full viewport height minus header */
			margin-top: 56px;
			transition: all 0.3s ease;
			overflow: hidden; /* Prevent content overflow */
		}

		/* SIDEBAR */
		.nav-sidebar {
			width: 240px;
			height: calc(100vh - 112px); /* Viewport height minus header and footer */
			background-color: #343a40;
			color: white;
			position: fixed;
			top: 56px;
			left: 0;
			overflow-y: auto;
			transition: width 0.3s ease, left 0.3s ease;
			z-index: 1030;
			/* display: flex; */
			flex-direction: column;
		}

		.nav-sidebar.collapsed {
			width: 0;
			padding: 0;
			overflow: hidden;
		}

		.nav-sidebar .accordion-button {
			background-color: #343a40;
			color: #fff;
			padding: 10px 15px;
			border: none;
			border-radius: 0;
		}

		.nav-sidebar .accordion-button:not(.collapsed) {
			background-color: #495057;
		}

		.nav-sidebar .accordion-body a {
			display: block;
			color: #dee2e6;
			padding: 6px 20px;
			text-decoration: none;
		}

		.nav-sidebar .accordion-body a:hover {
			background-color: #495057;
			color: #fff;
		}

		/* CONTENT AREA */
		.content-area {
			flex: 1;
			padding: 20px 0 20px 20px; /* remove right padding to allow full-width content */
			margin-left: 240px;
			transition: margin-left 0.3s ease;
			width: calc(100% - 240px);
			overflow-y: visible; /* allow body to handle vertical scroll to avoid right gutter */
			height: calc(100vh - 112px); /* Viewport height minus header and footer */
			position: relative;
			box-sizing: border-box; /* ensure padding doesn't reduce usable width */
		}

		.content-area.expanded {
			margin-left: 0;
			width: 100%; /* fill full width when sidebar is collapsed */
		}

		/* FOOTER */
		footer {
			background-color: #212529;
			color: #f8f9fa;
			text-align: center;
			padding: 15px 0;
			position: fixed;
			bottom: 0;
			left: 0;
			right: 0;
			width: 100%;
			z-index: 1000;
			border-top: 1px solid #495057;
			margin: 0;
		}

		/* Toggle Button */
		.sidebar-toggle {
			background: none;
			border: none;
			color: white;
			font-size: 1.5rem;
			cursor: pointer;
			margin-right: 10px;
		}
	</style>
</head>
<body>
	<!-- HEADER -->
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
			<div class="container-fluid">
				<button class="sidebar-toggle" id="sidebarToggle" title="Toggle Sidebar">
					<i class="bi bi-list"></i>
				</button>
				<a class="navbar-brand ms-2" asp-area="" asp-page="/Index">SchoolPortal.Web</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse"
						data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
						@{
							var fullName = Context.Session?.GetString("User_FullName");
						}
						<li class="nav-item">
							<span class="nav-link">
								@if (!string.IsNullOrEmpty(fullName))
								{
									<text>Welcome, @fullName</text>
								}
								else
								{
									<text>Welcome Guest</text>
								}
							</span>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<!-- MAIN LAYOUT -->
	<div class="main-container">
		<!-- SIDEBAR -->
		<nav class="nav-sidebar" id="sidebar">
			<partial name="_NavigationBar" />
		</nav>

		<!-- MAIN CONTENT -->
		<main role="main" class="content-area" id="content">
			@RenderBody()
		</main>
	</div>

	<!-- FOOTER -->
	<footer>
		<div class="container-fluid">
			&copy; 2025 - SchoolPortal.Web - <a asp-area="" asp-page="/Privacy" class="text-white">Privacy</a>
		</div>
	</footer>

	<!-- SCRIPTS -->
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.js"></script>
	@await RenderSectionAsync("Scripts", required: false)

	<script>
		// Sidebar toggle script
		const sidebar = document.getElementById('sidebar');
		const content = document.getElementById('content');
		const toggleButton = document.getElementById('sidebarToggle');

		toggleButton.addEventListener('click', () => {
			// For large screens - collapse sidebar
			if (window.innerWidth > 768) {
				sidebar.classList.toggle('collapsed');
				content.classList.toggle('expanded');
			} else {
				// For small screens - slide in/out
				sidebar.classList.toggle('show');
			}
		});
	</script>
</body>
</html>
