@model SchoolPortal.Web.Models.Section.EditSectionViewModel

@{
    ViewData["Title"] = "Edit Section";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4>@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="CompanyId" class="control-label"></label>
                    <select asp-for="CompanyId" class="form-control" id="companyDropdown" disabled>
                        <option value="">-- Select Company --</option>
                    </select>
                    <input type="hidden" asp-for="CompanyId" />
                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="SchoolId" class="control-label"></label>
                    <select asp-for="SchoolId" class="form-control" id="schoolDropdown">
                        <option value="">-- Select School --</option>
                    </select>
                    <span asp-validation-for="SchoolId" class="text-danger"></span>
                </div>
                
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="IsActive" />
                    <label class="form-check-label" asp-for="IsActive"></label>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Load company and school data
            var companyId = '@Model.CompanyId';
            var schoolId = '@Model.SchoolId';
            
            // Set company
            $.get('/api/companies/' + companyId, function(company) {
                var companyDropdown = $('#companyDropdown');
                companyDropdown.empty();
                companyDropdown.append($('<option>')
                    .val(company.id)
                    .text(company.companyName)
                    .attr('selected', 'selected'));
            });
            
            // Load schools for the company
            $.get(`/api/schools/by-company/${companyId}`, function(schools) {
                var schoolDropdown = $('#schoolDropdown');
                schoolDropdown.empty();
                schoolDropdown.append($('<option>').val('').text('-- Select School --'));
                
                $.each(schools, function(i, school) {
                    schoolDropdown.append($('<option>')
                        .val(school.id)
                        .text(school.name)
                        .attr('selected', school.id === schoolId));
                });
            });
        });
    </script>
}